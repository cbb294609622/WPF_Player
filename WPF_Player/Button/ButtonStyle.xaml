                                   Y2="{TemplateBinding Height, Converter={StaticResource valueConverter}, ConverterParameter=0.5}" 
                                   Stroke="{StaticResource btnColor1}"  StrokeThickness="2"></Line>
                        </Canvas>
                    </Grid>
                    <ControlTemplate.Triggers>
